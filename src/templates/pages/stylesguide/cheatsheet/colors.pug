mixin color(color, shades)
	.col-12.mb-0
		.pt.pb-2(class="bg-"+color)
	if shades
		.col-3.mb-0
			div(class="pt pb-0.5 bg-"+color+"-lightest")
		.col-3.mb-0
			div(class="pt pb-0.5 bg-"+color+"-light")
		.col-3.mb-0
			div(class="pt pb-0.5 bg-"+color)
		.col-3.mb-0
			div(class="pt pb-0.5 bg-"+color+"-dark")
	div(class="col-12 mt-0.25")
		.text-semibold= color.charAt(0).toUpperCase() + color.slice(1)

.row.no-gutters
	+color('primary', true)
	+color('secondary', true)
	+color('error', true)
	+color('success', true) 
	+color('grey', true)
	+color('black', false)