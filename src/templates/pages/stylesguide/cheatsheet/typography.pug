mixin weight(val)
	- var content = '<div class="mb-0.5 h1-like lh-1">Aa</div><div class="lh-1 fs-4">'+val.charAt(0).toUpperCase() + val.slice(1)+'</div>';
	.col
		if val !== 'normal'
			div(class="fw-" + val) 
				| !{content}
		else 
			| !{content}

.row.mb
	+weight('bold')
	+weight('semibold')
	+weight('regular')

