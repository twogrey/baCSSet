mixin input(type, groupId, id, disabled, inline, checked, toggle)
	.form-check(class={'form-check--inline': inline==true})
		input(type=type, name=type+"Example"+groupId, id=type+"Example"+groupId+id)&attributes({"disabled": disabled==true, "checked": checked==true, "class='switch'": toggle==true})
		label(for=type+"Example"+groupId+id)= type.toString().charAt(0).toUpperCase() + type.toString().slice(1)

mixin inputs(id, inline, title, type, toggle, error)
	if error == true
		- var describedby = 'titleGroup'+id+'-error';
	.form-group(role="group", aria-labelledby="titleGroup"+id, class={'error': error==true}, aria-describedby=describedby)
		if title
			.label(id="titleGroup"+id)= title
		if error
			+errorMsg('titleGroup'+id+'-error')
		if type == 'checkbox' && !toggle
			+input(type, id, '1', false, inline)
			+input(type, id, '2', false, inline, true)
			+input(type, id, '3', true, inline, false)
			+input(type, id, '4', true, inline, true)
		if type == 'radio'
			+input(type, id, '5', false, inline)
			+input(type, id, '6', false, inline, true)
			+input(type, id+1, '7', true, inline, false)
			+input(type, id+1, '8', true, inline, true)
		if toggle
			+input(type, id, '9', false, inline, false, true)
			+input(type, id, '10', false, inline, true, true)
			+input(type, id, '11', true, inline, false, true)
			+input(type, id, '12', true, inline, true, true)

mixin errorMsg(id)
	span.message(id=id) There's an error.

mixin helpMsg(id)
	span.help(id=id) Help text.